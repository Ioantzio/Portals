<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ian.portals">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_portals"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_portals_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainMenu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.Settings">
        </activity>
        <activity android:name=".activities.Game">
        </activity>
        <activity android:name=".activities.QuestionDialog" android:theme="@style/Theme.AppCompat.Dialog.Alert" android:excludeFromRecents="true">
        </activity>
    </application>

</manifest>